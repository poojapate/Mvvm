<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:padding="@dimen/_1sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:outlineAmbientShadowColor="@color/black"
                android:id="@+id/cardView"
                app:cardUseCompatPadding="true"
                android:outlineSpotShadowColor="@color/black"
                app:cardElevation="@dimen/_7sdp"

                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                app:cardCornerRadius="@dimen/_12sdp">

                <RelativeLayout

                    android:id="@+id/viewdetealis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--                <com.makeramen.roundedimageview.RoundedImageView-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="match_parent"-->
                    <!--                    app:riv_corner_radius="@dimen/_10sdp"-->
                    <!--                    android:outlineAmbientShadowColor="@color/black"-->
                    <!--                    android:elevation="@dimen/_10sdp"-->
                    <!--                    android:scaleType="centerCrop"-->
                    <!--                    android:src="@drawable/pitch_image"/>-->


                    <ImageView
                        android:id="@+id/u_thumb_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img" />


                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:src="@drawable/img" />

                    <TextView
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="start"
                        android:text="3:30"
                        android:textColor="@color/white"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_12sdp" />





                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="start"
                    android:id="@+id/r_textView"
                    android:text="Just For You Gregory"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_13sdp" />

                <LinearLayout
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/user_name"
                            android:drawablePadding="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="start"
                            android:text="History"
                            android:textColor="@color/black"
                            android:textFontWeight="600"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="start"
                            android:id="@+id/current_tv"
                            android:text="3 Months ago "
                            android:textColor="@color/textColor"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                                android:id="@+id/views"
                            android:drawablePadding="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="start"
                            android:text="10.6M"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                           android:id="@+id/likes"
                            android:drawablePadding="@dimen/_5sdp"
                            android:drawableTint="@color/textColor"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="start"
                            android:text="134K Likes"
                            android:textColor="@color/textColor"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>

                    <TextView
                        android:layout_marginRight="@dimen/_3sdp"
                        android:id="@+id/login_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/primaryDarkColor"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_13sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text="Open"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:outlineAmbientShadowColor="@color/black"
                android:id="@+id/cardView1"
                app:cardUseCompatPadding="true"
                android:outlineSpotShadowColor="@color/black"
                app:cardElevation="@dimen/_7sdp"

                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                app:cardCornerRadius="@dimen/_12sdp">

                <RelativeLayout

                    android:id="@+id/viewdetealis1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--                <com.makeramen.roundedimageview.RoundedImageView-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="match_parent"-->
                    <!--                    app:riv_corner_radius="@dimen/_10sdp"-->
                    <!--                    android:outlineAmbientShadowColor="@color/black"-->
                    <!--                    android:elevation="@dimen/_10sdp"-->
                    <!--                    android:scaleType="centerCrop"-->
                    <!--                    android:src="@drawable/pitch_image"/>-->


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />



                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerInParent="true"
                     />

                    <TextView
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="start"
                        android:text="3:30"
                        android:textColor="@color/white"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_12sdp" />





                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="start"
                    android:text="Just For You Gregory"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_13sdp" />

                <LinearLayout
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:fontFamily="@font/poppins_medium"
                            android:gravity="start"
                            android:text="History"
                            android:textColor="@color/black"
                            android:textFontWeight="600"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="start"
                            android:text="3 Months ago "
                            android:textColor="@color/textColor"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:drawablePadding="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="start"
                            android:text="10.6M"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:drawablePadding="@dimen/_5sdp"
                            android:drawableTint="@color/textColor"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="start"
                            android:text="134K Likes"
                            android:textColor="@color/textColor"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>

                    <TextView
                        android:layout_marginRight="@dimen/_3sdp"
                        android:id="@+id/login_btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:backgroundTint="@color/primaryDarkColor"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_13sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text="Open"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>